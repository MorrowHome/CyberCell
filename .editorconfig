# EditorConfig for Unity C# projects
root = true

[*.cs]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.shader]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf

[*.meta]
end_of_line = lf
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
